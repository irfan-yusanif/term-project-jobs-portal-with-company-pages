@{
    int id = (int)Session["user"];
}
<div class="content-wrapper">
    <div class="container" style="padding-top: 60px;">
        <div class="row">
            <div class="col-md-7">


                <h1 class="page-header">Create Company page</h1>
                

                    <!-- edit form column -->





                        <h3></h3>
                        <form class="form-horizontal" action="~/Company/add_page" role="form">
                            <div class="form-group">
                                <label class="col-lg-3 control-label">Company name:</label>
                                <div class="col-lg-8">
                                    <input class="form-control" name="name" type="text">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">About :</label>
                                <div class="col-lg-8">
                                    <input class="form-control" name="about" type="text">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">Website:</label>
                                <div class="col-lg-8">
                                    <input class="form-control" name="website" type="text">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">Location:</label>
                                <div class="col-lg-8">
                                    <input class="form-control" name="location" type="text">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">Employees:</label>
                                <div class="col-lg-8">
                                    <input class="form-control" name="employees" type="number">
                                </div>
                            </div>
                            <input type="hidden" name="made_by" value="@id" />
                            <div class="form-group">
                                <label class="col-md-3 control-label"></label>
                                <div class="col-md-8">
                                    <input class="btn btn-primary" value="Create" type="submit">

                                    <a href="~/Company" class="btn btn-default">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

