                <h1 class="page-header">Edit Profile</h1>
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-4 col-sm-6 col-xs-12">
                        <div class="text-center">
                            @if (ViewBag.is_img_exit == "true") { 
                                <img src="@("/Files/u" + Model.Id + ".jpg")" width="200" height="200" class=" img-circle img-thumbnail">
                            }
                            else
                            {
                                <img src="@("/Files/defaultpic.png")" width="200" height="200" class=" img-circle img-thumbnail">
                            }
                                <h6>Upload  photo...</h6>
                                <form action="../save_img" method="post" enctype="multipart/form-data">
                                    <input type="file" name="image" class="text-center center-block well well-sm">
                                    <input type="submit" value="upload" />
                                </form>
                            @if (TempData["ext"] == "false")
                            {
                            <div>File not saved. You can only upload images with extension .jpg</div>
                            }
</div>
                    </div>

                    <!-- edit form column -->
                    <div class="col-md-8 col-sm-6">
                        @using (Html.BeginForm("update_profile", "User", FormMethod.Post))
                        {
                            @Html.HiddenFor(m => m.Id)
                            
                            
                            <div class="form-group">
                                @Html.LabelFor(m => m.name)
