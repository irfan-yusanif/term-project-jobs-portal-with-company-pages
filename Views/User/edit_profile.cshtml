                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m=> m.user_location)
                                @Html.TextBoxFor(m => m.user_location, new { @class = "form-control", required = "required" })
                            </div>
                            <input class="btn btn-primary" value="Save Changes" type="submit">

                            <a href="~/User/Index?id=@Model.Id" class="btn btn-default">Cancel</a>
